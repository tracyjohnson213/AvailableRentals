<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/txtSpecial"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/specialoffer"
        android:gravity="center_horizontal"
        android:text="@string/txtSpecial"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtSpecialAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="280dp"
        android:gravity="center_horizontal"
        android:text="@string/txtProperty4Addres"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtSpecialZip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="193dp"
        android:gravity="center_horizontal"
        android:text="@string/txtProperty4Zip"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtSpecialPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="69dp"
        android:gravity="center_horizontal"
        android:text="@string/txtProperty4Price"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtSpecialBed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="148dp"
        android:gravity="center_horizontal"
        android:text="@string/txtProperty4Bed"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtSpecialBath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="109dp"
        android:gravity="center_horizontal"
        android:text="@string/txtProperty4Bath"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtSpecialCityState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="236dp"
        android:gravity="center_horizontal"
        android:text="@string/txtCityState"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtOneMoment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="@string/txtOneMoment" />

</RelativeLayout>